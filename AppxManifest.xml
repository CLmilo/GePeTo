        <desktop2:Rule Direction="in" IPProtocol="TCP" LocalPortMin="8080" LocalPortMax="8082" Profile="all" />
        <desktop2:Rule Direction="in" IPProtocol="TCP" LocalPortMin="8443" LocalPortMax="8443" Profile="all" />
